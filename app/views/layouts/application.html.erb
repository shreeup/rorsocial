<!DOCTYPE html>
<html>
  <head>
    <title>Social</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media:'all', "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
 <nav class="navbar navbar-inverse navbar-toggleable-md bg-inverse">
 <div class="container">
 <%= link_to "Social", root_path, class:" navbar-bran" %>
 <ul class="nav justify-content-end">
  <li class="nav-item"><%= link_to "Home", root_path , class:"nav-link" %></li>
  <li class="nav-item"><%= link_to "About", about_path , class:"nav-link" %></li>
  <li class="nav-item"><%= link_to "Contact", contactus_path , class:"nav-link" %></li>
  
  
  <% if user_signed_in? %>
  <li class="nav-item pull-md-right">
  <%= link_to "LogOut", '/users/sign_out', :method => :delete , class:"nav-link" %>  </li>
  <% else %>
  <li class="nav-item pull-md-right">
  <%= link_to "SignUp", '/users/sign_up', class:"nav-link btn btn-primary" %>  </li>
  <li class="nav-item pull-md-right">
  <%= link_to "SignIn", '/users/sign_in', class:"nav-link" %>  </li>
<% end %>
 </ul>
 </div>
 </nav>
 <!-- flash msgs -->
 <% flash.each do |name,message| %>
  <%= content_tag(:div, message,class:"alert alert-info #{name}") %>
  <% end %>

    <%= yield %>
    <footer class="small text-muted">
    <div class="container">
    <hr>
    <center>
    <p>@ 2023 Social</p>
    </center>
    </div>
  </body>
</html>
