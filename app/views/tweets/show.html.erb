<div class="container">
<p style="color: green"><%= notice %></p>

<div cass="row">
<div class="offset-md-2 col-md-8">
  <div class="card card-block">
    <h4 class="card-title"><%= link_to @tweet.user.username, user_path(:username=>@tweet.user.username) %></h4>
    <p class="card-text"> <%= @tweet.content %> </p>
    <% if @tweet.user==current_user %>
      <%= link_to "Edit", edit_tweet_path(@tweet), class: "card-link" %> 
      <%= link_to "Destroy", @tweet, method: :delete , class: "card-link" %> 
      <% end %>
    <%= link_to "Back to tweets", tweets_path, class: "card-link" %>
    </div>
  </div>
</div>

</div>