<div class="container">
<p style="color: green"><%= notice %></p>
<h1>Tweets</h1>
<div class="row">
<div class="col-md-4">
   <div class="card card-block">
   <% if user_signed_in? %>
      <h4 class="card-title">Your Account</h4>
      <p class="card-text"> <%= link_to current_user.username, user_path(current_user.username) %> </p>
   <% else %>
      <p class="card-text"> <%= link_to "SignUp", '/users/sign_up' %>  </p>
   <% end %>
   </div>
</div>
<div class="col-md-8">
   <% if user_signed_in? %>
   <%= link_to "New tweet", new_tweet_path %>
   <% end %>
   <ul class="list-group">
   <% @tweets.each do |tweet| %>
      <%= link_to tweet, class:"list-group-item list-group-item-action" do %>
         <h5 class="list-group-item-heading"><%= tweet.user.username %></h5>
         <p class="list-group-tem-text"><%= tweet.content %></p>
   <% end %>
   <% end %>
   </ul>
  
</div>
</div>
</div>