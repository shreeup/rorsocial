<div class="container">
<p style="color: green"><%= notice %></p>

<h1>Tweets</h1>

<table class="table">
<thead>
<tr>
<th>User</th><th>Content</th><th colspan="3">Actions</th>
</tr>
</thead>
<tbody>
<% @tweets.each do |tweet| %>
   <tr>
   <td><%= tweet.user.email %></td>
   <td><%= tweet.content %></td>
   <td> <p>
   <%= link_to "Show", tweet %>
 </p></td>
 <td> 
 <% if tweet.user==current_user %>
 <p>
 <%= link_to "Edit", tweet %>
</p>
<% end %>
</td>
<td> <% if tweet.user==current_user %><p>
<%= link_to "Delete", tweet , method: :delete, data: {confirm: 'Are you sure?'} %>
</p><% end %></td>
   </tr>
   
<% end %>

</tbody>
</table>

<% if user_signed_in? %>
<%= link_to "New tweet", new_tweet_path %>
<% end %>
</div>